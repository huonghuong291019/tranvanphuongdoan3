@using tranvanphuongdoan3.Areas.Admin.Models.Entities;
@{
    ViewBag.Title = "login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@model IEnumerable<Account>
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form class="user">
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
    @Html.TextBoxFor(model => model.username, new { @type = "text", @id = "Uname", @class = "form-control", @placeholder = "User Name", @autofocus = "autofocus", required = "required" })
    @Html.TextBoxFor(model => model.pass, new { @type = "password", @id = "Pword", @class = "form-control", @placeholder = "Password", @required = "required" })
